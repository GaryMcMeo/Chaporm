<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Charity</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #AFE1AF;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #f8f9fa;
            padding: 10px 0;
            border-bottom: 1px solid #dee2e6;
            width: 100%;
            text-align: center;
        }

        .navbar img {
            height: 60px;
            margin-bottom: 10px;
        }

        .navbar-menu {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .navbar-links {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 10px;
        }

        .navbar-links a {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            color: #343a40;
        }

        .navbar-links a:hover {
            color: #007bff;
        }

        .my-charity-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
        }

        .campaign {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .campaign h2 {
            margin-bottom: 10px;
        }

        .campaign p {
            margin: 5px 0;
        }

        .donate-funds:hover {
            text-decoration: none;
        }

        .donate-form {
            display: inline-block;
            margin-left: 10px;
        }

        .donate-form input[type="number"] {
            width: 100px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-right: 5px;
        }

        .donate-form button[type="submit"] {
            padding: 8px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .donate-form button[type="submit"]:hover {
            background-color: #45a049;
        }

        .footer {
            background-color: #fff;
            color: #343a40;
            padding: 10px 0;
            text-align: center;
            margin-top: auto;
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="navbar-menu">
            <img class="header-img" src="https://pub-07d7c954bafb4365bda31d35522e8898.r2.dev/chaporm.png"
                alt="Charity Platform Duo Mawud">
            <div class="navbar-links">
                <a href="/home"><strong style="color: green;">Home</strong></a>
                <a href="/create_campaign">Create Campaign</a>
                <a href="/my_campaign">My Campaign</a>
                <a href="/profile">Profile</a>
            </div>
        </div>
    </nav>

    <div class="my-charity-container">
        <% campaigns.forEach(function(campaign) { %>
        <div class="campaign">
            <h2><%= campaign.title %></h2>
            <p>Description: <%= campaign.description %></p>
            <p>Goal Amount: <%= campaign.goal %></p>
            <p>Amount Raised: <%= campaign.raisedAmount %></p>
            <p>Campaign ID: <%= campaign.campaignId %></p> <!-- Menampilkan ID campaign -->
            <% if (campaign.completed) { %>
            <p>Status: Completed</p>
            <% } else { %>
            <p>Status: In Progress</p>
            <% } %>
            <br>
            <p class="donate-funds">Donate Funds</p>
            <form class="donate-form" action="/donate" method="POST">
                <input type="hidden" name="campaignId" value="<%= campaign.campaignId %>">
                <input type="number" name="amount" min="1" required>
                <button type="submit">Donate</button>
            </form>
        </div>
        <% }) %>
    </div>

    <div class="footer" style="color: green;">
        Â© Duo Mawud
    </div>
</body>

</html>